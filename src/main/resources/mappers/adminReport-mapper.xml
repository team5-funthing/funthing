<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="AdminReportDAO">

	<!-- 신고 목록 보기 -->
	<select id="getReportList" resultType="report" parameterType="report">
		SELECT * FROM report ORDER BY reportNo desc
	</select>
	
	<!-- 신고 글 상세보기 -->
	<select id="getReport" resultType="report" parameterType="report">
		SELECT * FROM report where reportNo = ${reportNo}
	</select>
	
	
</mapper>
